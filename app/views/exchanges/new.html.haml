%h1 Make a new gift exchange

= form_for @exchange do |f|
  = f.label :title
  = f.text_field :title, placeholder: "Exchange name"

  = f.label :match_at
  = f.datetime_select :match_at

  = f.label :exchange_at
  = f.datetime_select :exchange_at

  = f.fields_for @first_participant do |g|
    = g.label :name, "Your name"
    = g.text_field :name

    = g.label :email_address, "Your e-mail address"
    = g.email_field :email_address

  = f.submit "Create Exchange"